<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtJLLRound"
        android:layout_width="@dimen/picture_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mini_margin"
        android:background="@drawable/header_shape"
        android:gravity="center"
        android:padding="@dimen/mini_margin"
        android:text="@string/Number"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/linJLLInJobListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/mini_margin"
        android:layout_marginTop="@dimen/mini_margin"
        android:background="@color/colorLayoutBG1"
        android:padding="@dimen/mini_margin" />
</LinearLayout>